<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      x:Class="League_of_Legends_Counterpicks.MainPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      mc:Ignorable="d">
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="FullScreen"
                          Label="Ad Block"
                          Click="AdBlock_Click" />
            <AppBarButton Icon="Comment"
                          Label="Send Feedback"
                          Click="Comment_Click" />
            <AppBarButton Icon="Like"
                          Label="Tweet"
                          Click="Tweet"/>
            <AppBarButton Icon="Document"
                          Label="Change Log"
                          Click="ChangeLog_Clicked" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource HubBackgroundImageBrush}" Loaded="GridAd_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="7.5*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <!--<UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="7b07e28d-b92c-46de-9087-42937a079714"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      Loaded="Ad_Loaded"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231252" />-->

        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_B3E200"
                                                  HorizontalAlignment="Center"
                                                  Height="80"
                                                  Loaded="Ad_Loaded"
                                                  Id="AdMediator-Id-A9B26502-92B4-4543-8114-35155ED1598C"
                                                  VerticalAlignment="Top"
                                                  Width="480" />
        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
               
            <TextBox Margin="15,0,15,0"
                     IsReadOnly="True"
                     GotFocus="TextBox_GotFocus"
                     TextAlignment="Center"
                     Text="Tap to Search">
            </TextBox>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListView ItemsSource="{Binding Roles}"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                          ItemClick="GroupSection_ItemClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="15,0,0,20">
                                <TextBlock Text="{Binding UniqueId}"
                                           Style="{ThemeResource ListViewItemTextBlockStyle}"
                                           FontSize="28"
                                           FontFamily="Segoe WP Black" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="19"
                                   VerticalAlignment="Center"
                                   Foreground="#FFF3FD29"> Download this app for Windows 10 now on your Desktop!</TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right">

            <TextBlock Text="By a Diamond 1"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Raklor"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_E867C2"
                                          HorizontalAlignment="Center"
                                          Height="80"
                                          Id="AdMediator-Id-80F4375E-50E9-4BF8-A9C3-47443A97AD78"
                                          Grid.Row="2"
                                          VerticalAlignment="Bottom"
                                          Width="480" />

        <!--<UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="7b07e28d-b92c-46de-9087-42937a079714"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      Grid.Row="2"
                      Loaded="Ad_Loaded"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231251" />-->

    </Grid>
</Page>
    
   