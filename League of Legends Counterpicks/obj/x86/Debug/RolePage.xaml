      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Roles[0], Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}">

    <Page.Resources>
        <ValueConverter:RoleConverter x:Key="RoleConverter"/>
        <ValueConverter:NameToImage x:Key="NameToImage"/>
        <Style TargetType="HubSection" x:Key="Header">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="50"
                                   FontFamily ="{ThemeResource PhoneFontFamilySemiLight}"
                                   Margin="0,10,0,0" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="HubData">
            <Grid>
                <GridView x:ConnectionId='1' ItemsSource="{Binding}"
                          IsItemClickEnabled="True"
                                                        
                          SelectionMode="None"
                          IsSwipeEnabled="false">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                       Width="60"
                                       Height="60" />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='2' Icon="Find"
                          Label="Search"
                                              >
            </AppBarButton>
            <AppBarButton Icon="Filter"
                          Label="Role">
                <Button.Flyout>
                    <ListPickerFlyout x:ConnectionId='3' x:Name="RoleFlyout"
                                      Placement="Full" 
                                      ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                                                               >
                        <ListPickerFlyout.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="{StaticResource TextStyleExtraLargeFontSize}"/>
                            </DataTemplate>
                        </ListPickerFlyout.ItemTemplate>
                    </ListPickerFlyout>
                </Button.Flyout>
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>


