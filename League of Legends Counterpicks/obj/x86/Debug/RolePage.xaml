<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      xmlns:q="using:QKit"
      x:Name="pageRoot"
      x:Class="League_of_Legends_Counterpicks.RolePage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Roles[0], Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}">

    <Page.Resources>
        <ValueConverter:RoleConverter x:Key="RoleConverter"/>
        <ValueConverter:NameToImage x:Key="NameToImage"/>
        <Style TargetType="HubSection" x:Key="Header">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="50"
                                   FontFamily ="{ThemeResource PhoneFontFamilySemiLight}"
                                   Margin="0,10,0,0" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="HubData">
            <Grid>
                <GridView x:ConnectionId='1' ItemsSource="{Binding}"
                          IsItemClickEnabled="True"
                                                        
                          SelectionMode="Single"
                          IsSwipeEnabled="false">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="3,3,3,3" HorizontalAlignment="Center">
                                <Image x:ConnectionId='2' Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                       Width="60"
                                       Height="60" 
                                                                 />
                                <Image Source="Assets/Challengericon.png" Width="66" Height="66" Stretch="Fill"
                                       Opacity="0.65" IsHitTestVisible="False"/>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar> 
            <AppBarButton Icon="Filter"
                          Label="Role">
                <Button.Flyout>
                    <ListPickerFlyout x:ConnectionId='3' x:Name="RoleFlyout"
                                      Placement="Full" 
                                      ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                                                               >
                        <ListPickerFlyout.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="{StaticResource TextStyleExtraLargeFontSize}"/>
                            </DataTemplate>
                        </ListPickerFlyout.ItemTemplate>
                    </ListPickerFlyout>
                </Button.Flyout>
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>


    <Grid x:ConnectionId='4'                       >
        <Grid.Background>
            <ImageBrush ImageSource="Assets/LoL.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,50,0,0" x:Name="AdGrid">
            <Grid.Resources>
                <Style TargetType="UI:AdControl">
                    <Setter Property="Width" Value="160"></Setter>
                </Style>
            </Grid.Resources>
            <UI:AdControl x:ConnectionId='11' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='12' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='13' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='14' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='15' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='16' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='17' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='18' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='19' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='20' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='21' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='22' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='23' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='24' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='25' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='26' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='27' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='28' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='29' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='30' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='31' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='32' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='33' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='34' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='35' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='36' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='37' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='38' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
            <UI:AdControl x:ConnectionId='39' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
        </Grid>
        <Grid Grid.Row="1" Name="AdGrid2">
            <UI:AdControl x:ConnectionId='10' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d" Style="{StaticResource HorizontalAd}"                                                                                 IsAutoRefreshEnabled="True" AutoRefreshIntervalInSeconds="30"  AdUnitId="242841" />
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox x:ConnectionId='5' Name="FilterBox"
                     Height="40"
                     Margin="15,20,15,0"
                                                  
                                                    
                     Text="Type to search"
                                                        >
            </TextBox>
            <TextBlock HorizontalAlignment="Right" Margin="0,13,30,0" FontFamily="Segoe UI Symbol" Text="" 
                       Foreground="Black" FontSize="35" IsHitTestVisible="False" FontWeight="ExtraLight">
            </TextBlock>
            <TextBlock x:Name="RoleName"
                       Text="{Binding SelectedRole}"
                       Grid.Row="1"
                       FontSize="50"
                       Margin="15,0,0,0"
                       FontFamily ="{ThemeResource PhoneFontFamilySemiLight}">
            </TextBlock>

            <Grid x:ConnectionId='6' Name="FilterGridView"
                  Margin="15,15,0,0"
                  Grid.Row="2" 
                                                
                  DataContext="{Binding Filter}" Visibility="Collapsed">
                <ContentControl ContentTemplate="{StaticResource HubData}"/>
            </Grid>

            <Grid Grid.Row="2">
                <q:AlphaJumpList x:ConnectionId='7' Name="JumpList"
                             Margin="15,15,0,0"
                             Grid.Row="2"
                                                     >
                    <GridView x:ConnectionId='8' Name="JumpListGridView"
                          ItemsSource="{Binding GroupedChampions}"
                          IsItemClickEnabled="True"
                                                        
                          SelectionMode="Single"
                          IsSwipeEnabled="false">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image x:ConnectionId='9' Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                           Width="50"
                                           Height="50"
                                                                     />
                                    <Image Source="Assets/Challengericon.png" Width="56" Height="56" Stretch="Fill"
                                           Opacity="0.65" IsHitTestVisible="False"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </q:AlphaJumpList>
            </Grid>
        </Grid>
    </Grid>
</Page>

