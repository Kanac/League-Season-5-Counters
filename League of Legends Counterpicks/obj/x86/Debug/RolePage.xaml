            <UI:AdControl x:ConnectionId='7' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239142" />
        </Grid>

        <Hub Name="MainHub">
            <HubSection Name="All"
                        Header="All"
                        Style="{StaticResource Header}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <q:AlphaJumpList x:ConnectionId='5' Name="jumpList"
                                         Grid.Row="1"
                                         Visibility="Collapsed"
                                                                 >
                            <GridView x:ConnectionId='6' Name="myGridView"
                                      ItemsSource="{Binding GroupedChampions}"
                                      IsItemClickEnabled="True"
                                                                    
                                      SelectionMode="None"
                                      IsSwipeEnabled="false">
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Image Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                                   Width="50"
                                                   Height="50" />
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </q:AlphaJumpList>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Assassin"
                        x:Name="Assassin"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Assassin}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">


                        <ContentControl ContentTemplate="{StaticResource HubData}"
                                        Grid.Row="1" />
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Fighter"
                        x:Name="Fighter"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Fighter}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">


                        <ContentControl ContentTemplate="{StaticResource HubData}"
                                        Grid.Row="1" />
                    </Grid>
                </DataTemplate>

            </HubSection>

            <HubSection Header="Mage"
                        x:Name="Mage"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Mage}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <ContentControl ContentTemplate="{StaticResource HubData}"
                                        Grid.Row="1" />
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Marksman"
                        x:Name="Marksman"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Marksman}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <ContentControl ContentTemplate="{StaticResource HubData}" />
                    </Grid>
                </DataTemplate>

            </HubSection>

            <HubSection Header="Support"
                        x:Name="Support"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Support}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <ContentControl ContentTemplate="{StaticResource HubData}"/>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Tank"
                        x:Name="Tank"
                        Style="{StaticResource Header}"
                        DataContext="{Binding Champions, Converter={StaticResource RoleConverter}, ConverterParameter=Tank}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <ContentControl ContentTemplate="{StaticResource HubData}" />
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Filter"
                    x:Name="Filter"
                    Style="{StaticResource Header}"
                    DataContext="{Binding Filter}">
                <DataTemplate>
                    <Grid Margin="0,-30,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBox x:ConnectionId='4' Height="40"
                             Margin="0,20,0,0"
                                                        
                             Text="Type to search"
                                                     
                                                              >
                        </TextBox >

                        <ContentControl ContentTemplate="{StaticResource HubData}"
                                    Grid.Row="1" />
                    </Grid>
                </DataTemplate>
            </HubSection>
