<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      x:Name="pageRoot"
      x:Class="League_of_Legends_Counterpicks.ChampionPage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ValueConverter:NameToImage x:Key="NameToImageConverter" />
        <ValueConverter:CommentVisiblity x:Key="CommentVisibility" />
        <ValueConverter:CommentFormat x:Key="CommentFormat" />
        <ValueConverter:ChampionVisibility x:Key="ChampionVisibility" />
        <DataTemplate x:Key="CommentSection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,10,0">
                    <Image x:ConnectionId='3' Name="UpvoteImage"
                           Source="Assets/upvoteblank.png"
                           Height="30"
                           Width="30"
                                                                 
                                                 >
                    </Image>
                    <TextBlock Text="{Binding Score}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="20">
                    </TextBlock>
                    <Image x:ConnectionId='4' Name="DownvoteImage"
                           Source="Assets/downvoteblank.png"
                           Height="30"
                           Width="30"
                                                                   
                                                   >
                    </Image>
                </StackPanel>

                <Grid Margin="0,0,0,10"
                      Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="25"
                               Text="{Binding User}">
                    </TextBlock>
                    <TextBlock FontSize="18"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Text="{Binding Text}">
                    </TextBlock>
                </Grid>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ChampionScore">
            <StackPanel Margin="0,0,10,5">
                <Image x:ConnectionId='1' Source="Assets/upvoteblank.png"
                       Name="UpvoteImage"
                                                    
                                                                    
                       Height="25"
                       Width="25">
                </Image>
                <TextBlock Text="{Binding Score}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="20">
                </TextBlock>
                <Image x:ConnectionId='2' Source="Assets/downvoteblank.png"
                       Name="DownvoteImage"
                                                      
                                                                      
                       Height="25"
                       Width="25">
                </Image>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='5' Icon="SolidStar" Label="Live Stats"                          />
        </CommandBar>
    </Page.BottomAppBar>



    <Grid x:ConnectionId='6' x:Name="LayoutRoot"
                                >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
            <Image Source="{Binding Champion.Key, Converter={StaticResource NameToImageConverter}}"
                   Width="60"
                   Height="60" />
            <TextBlock Text="{Binding Champion.Name}"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="25" />
            <TextBlock Style="{ThemeResource HeaderTextBlockStyle}"
                       Margin="0,0,10,0"
                       FontWeight="Bold"
                       FontSize="25"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="{Binding Champion.Tags[0]}" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,50,0,0" x:Name="AdGrid">
            <UI:AdControl x:ConnectionId='37' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239101" />
            <UI:AdControl x:ConnectionId='38' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239102" />
            <UI:AdControl x:ConnectionId='39' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239103" />
            <UI:AdControl x:ConnectionId='40' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239104" />
            <UI:AdControl x:ConnectionId='41' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239105" />
            <UI:AdControl x:ConnectionId='42' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239106" />
            <UI:AdControl x:ConnectionId='43' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239107" />
            <UI:AdControl x:ConnectionId='44' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239108" />
            <UI:AdControl x:ConnectionId='45' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239109" />
            <UI:AdControl x:ConnectionId='46' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239110" />
            <UI:AdControl x:ConnectionId='47' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239111" />
            <UI:AdControl x:ConnectionId='48' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239112" />
            <UI:AdControl x:ConnectionId='49' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239113" />
            <UI:AdControl x:ConnectionId='50' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239114" />
            <UI:AdControl x:ConnectionId='51' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239115" />
            <UI:AdControl x:ConnectionId='52' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239116" />
            <UI:AdControl x:ConnectionId='53' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239117" />
            <UI:AdControl x:ConnectionId='54' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239118" />
            <UI:AdControl x:ConnectionId='55' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239119" />
            <UI:AdControl x:ConnectionId='56' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239120" />
        </Grid>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <UI:AdControl x:ConnectionId='36' ApplicationId="bf747944-c75c-4f2a-a027-7c159b32261d"
                          Style="{StaticResource HorizontalAd}"
                                            
                          IsAutoRefreshEnabled="False"
                                                  
                          AdUnitId="239121" />
        </Grid>
        
        <Hub x:Name="MainHub"
             Margin="0,-10,0,0"
             Grid.Row="1">
            <HubSection x:Name="CounterSection">
                <DataTemplate>
                    <Grid x:ConnectionId='33'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="30"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Text="Counters">
                            </TextBlock>

                        <Grid Grid.Row="1">
                            <ProgressRing x:ConnectionId='34' VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Height="150"
                                          Width="150"
                                                                     
                                          IsActive="True">

                            </ProgressRing>

                            <ListView ItemsSource="{Binding ChampionFeedback.Counters, Converter={StaticResource ChampionVisibility}, ConverterParameter=Counter}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <ContentControl ContentTemplate="{StaticResource ChampionScore}"></ContentControl>

                                            <Image x:ConnectionId='35' Grid.Column="1"
                                                   Width="70"
                                                   Height="70"
                                                                        
                                                   Source="{Binding Name, Converter={StaticResource NameToImageConverter}, ConverterParameter=Name}">
                                            </Image>

                                            <ProgressBar Grid.Column="2"
                                                         Height="12"
                                                         Foreground="Crimson"
                                                         Margin="15,0,25,0"
                                                         Value="{Binding Value}">
                                            </ProgressBar>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="EasyMatchupSection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='30'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock FontSize="30"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Text="Easy Matchups">
                        </TextBlock>

                        <Grid Grid.Row="1">
                            <ProgressRing x:ConnectionId='31' VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Height="150"
                                          Width="150"
                                                                         
                                          IsActive="True">

                            </ProgressRing>

                            <ListView ItemsSource="{Binding ChampionFeedback.EasyMatchups}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <ContentControl ContentTemplate="{StaticResource ChampionScore}"></ContentControl>

                                            <Image x:ConnectionId='32' Grid.Column="1"
                                                   Width="70"
                                                   Height="70"
                                                                              
                                                   Source="{Binding ChampionFeedbackName, Converter={StaticResource NameToImageConverter}, ConverterParameter=Name}">
                                            </Image>

                                            <ProgressBar Grid.Column="2"
                                                         Height="12"
                                                         Foreground="Green"
                                                         Margin="15,0,25,0"
                                                         Value="{Binding Value}">
                                            </ProgressBar>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="SynergySection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='26'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock FontSize="30"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource TitleTextBlockStyle}"
                                       Text="Synergy">
                        </TextBlock>

                        <Grid Grid.Row="1">
                            <ProgressRing x:ConnectionId='27' VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Height="150"
                                          Width="150"
                                                                     
                                          IsActive="True">

                            </ProgressRing>

                            <TextBlock x:ConnectionId='28' Visibility="Collapsed"
                                       FontSize="30"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                                                       
                                       TextWrapping="Wrap"> Be the first to submit a synergy champion!
                            </TextBlock>


                            <ListView ItemsSource="{Binding ChampionFeedback.Counters, Converter={StaticResource ChampionVisibility}, ConverterParameter=Synergy}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <ContentControl ContentTemplate="{StaticResource ChampionScore}"></ContentControl>

                                            <Image x:ConnectionId='29' Grid.Column="1"
                                                   Width="70"
                                                   Height="70"
                                                                               
                                                                                      >
                                            </Image>

                                            <ProgressBar Grid.Column="2"
                                                         Height="12"
                                                         Foreground="#FF771287"
                                                         Margin="15,0,25,0"
                                                         Value="{Binding Value}">
                                            </ProgressBar>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="CounterCommentSection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='23'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                    

                        <TextBlock FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="{Binding Champion.Name, Converter={StaticResource CommentFormat}, ConverterParameter=Counter}"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>


                        <Grid Grid.Row="1">
                            <ProgressRing x:ConnectionId='24' VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Height="150"
                                          Width="150"
                                                                             
                                          IsActive="True">
                            </ProgressRing>

                            <TextBlock x:ConnectionId='25' Visibility="Collapsed"
                                       Name="NoCommentMessage"
                                       FontSize="30"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                                                     
                                       TextWrapping="Wrap"> Be the first to submit a comment!</TextBlock>

                            <ListView ItemsSource="{Binding ChampionFeedback.Comments, Converter={StaticResource CommentVisibility}, ConverterParameter=Counter}"
                                      IsItemClickEnabled="True"
                                      Grid.Row="2">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl ContentTemplate="{StaticResource CommentSection}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="PlayingCommentSection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='20'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                     

                        <TextBlock FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="{Binding Champion.Name, Converter={StaticResource CommentFormat}, ConverterParameter=Playing}"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>


                        <Grid Grid.Row="1">
                            <ProgressRing x:ConnectionId='21' VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Height="150"
                                          Width="150"
                                                                             
                                          IsActive="True">
                            </ProgressRing>

                            <TextBlock x:ConnectionId='22' Visibility="Collapsed"
                                       Name="NoCommentMessage2"
                                       FontSize="30"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                                                      
                                       TextWrapping="Wrap"> Be the first to submit a comment!
                            </TextBlock>

                            <ListView ItemsSource="{Binding ChampionFeedback.Comments, Converter={StaticResource CommentVisibility}, ConverterParameter=Playing}"
                                      IsItemClickEnabled="True"
                                      Grid.Row="2">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl ContentTemplate="{StaticResource CommentSection}" />
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>


            <HubSection x:Name="SubmitFeedbackSection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='14'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="3.5*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
               

                        <TextBlock x:Name="Feedback"
                                   FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Submit Comments?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>


                        <Grid Grid.Row="1">
                            <RadioButton x:ConnectionId='18' GroupName="Comment"
                                         HorizontalAlignment="Left"
                                         Margin="40,-5,0,0"
                                                                  
                                         Content="Counter"></RadioButton>
                            <RadioButton x:ConnectionId='19' GroupName="Comment"
                                         Margin="0,-5,0,0"
                                         HorizontalAlignment="Right"
                                                                  
                                         Content="Playing as"></RadioButton>
                        </Grid>

                        <TextBox x:ConnectionId='15' Margin="30,-10,30,0"
                                 Grid.Row="2"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Text="Your name"
                                 TextAlignment="Center"
                                                      
                                                         ></TextBox>

                        <TextBox x:ConnectionId='16' HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Margin="0,10,0,0"
                                 Grid.Row="3"
                                                            
                                 TextWrapping="Wrap"></TextBox>
                        
                        <Button x:ConnectionId='17' Grid.Row="4"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                                      >Send</Button>
                    </Grid>
                </DataTemplate>
            </HubSection>


            <HubSection x:Name="SubmitCounterSection" Visibility="Collapsed">
                <DataTemplate>
                    <Grid x:ConnectionId='7'                       >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

               

                        <TextBlock x:Name="Feedback"
                                   FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Submit Champion?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>

                        <Grid Grid.Row="1">
                            <RadioButton x:ConnectionId='11' GroupName="Champion"
                                         Margin="0,-5,0,0"
                                         MinWidth="50"
                                         HorizontalAlignment="Left"
                                                                          
                                         Content="Counter"></RadioButton>
                            <RadioButton x:ConnectionId='12' GroupName="Champion"
                                         Margin="0,-5,0,0"
                                         MinWidth="50"
                                         HorizontalAlignment="Center"
                                                                              
                                         Content="Easy"></RadioButton>
                            <RadioButton x:ConnectionId='13' GroupName="Champion"
                                         Margin="0,-5,0,0"
                                         MinWidth="50"
                                         HorizontalAlignment="Right"
                                                                          
                                         Content="Synergy"></RadioButton>
                        </Grid>

                        <TextBox x:ConnectionId='8' Height="40"
                                 Name="FilterBox"
                                 Margin="30,-10,30,0"
                                                          
                                 Grid.Row="2"
                                                           
                                 Text="Type to search"
                                                                 >
                        </TextBox >

                        <GridView x:ConnectionId='9' ItemsSource="{Binding Filter}"
                                  HorizontalAlignment="Center"
                                  IsItemClickEnabled="True"
                                  Grid.Row="3"
                                  Margin="0,15,0,10"
                                                          >
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Key, Converter={StaticResource NameToImageConverter}}"
                                           Width="50"
                                           Height="50" />
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>

                        <Button x:ConnectionId='10' Grid.Row="4"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                                       
                                Content="Submit">
                        </Button>

                    </Grid>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>

