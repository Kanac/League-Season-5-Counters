<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      x:Name="pageRoot"
      x:Class="League_of_Legends_Counterpicks.ChampionPage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Roles[1].Champions[1], Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <ValueConverter:NameToImage x:Key="NameToImageConverter" />
        <ValueConverter:CounterFormat x:Key="CounterConverter" />
        <ValueConverter:PlayingFormat x:Key="PlayingConverter" />
        <ValueConverter:CounterVisiblity x:Key="CounterVisbilityConverter" />
        <ValueConverter:PlayingVisbility x:Key="PlayingVisbilityConverter" />
    </Page.Resources>
    
    <!--<Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Comment"
                          Label="Comment" 
                          Click="Comment_Clicked"/>
        </CommandBar>
    </Page.BottomAppBar>-->


    <Grid x:Name="LayoutRoot">

        <Hub x:Name="MainHub">
            <HubSection x:Name="CounterSection"
                        x:Uid="CounterSection">

                <DataTemplate>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>

                        <!--<WindowsPhone81:AdMediatorControl x:Name="AdMediator_F91A90"
                                                          Height="Auto"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Top"
                                                          Id="AdMediator-Id-1A00C840-7A8F-4214-9C83-6F0DD0CB4EE9"
                                                          Width="Auto" />

                        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_2EF4E8"
                                                          Height="Auto"
                                                          VerticalAlignment="Bottom"
                                                          HorizontalAlignment="Center"
                                                          Id="AdMediator-Id-CB0A72EE-F012-4E13-985C-3FE34D66A5C0"
                                                          Grid.Row="3"
                                                          Width="Auto" />-->

                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231529" />
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      Grid.Row="3"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231530" />

                        <Grid Grid.Row="1"
                              Margin="0,-15,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Champion.ImagePath}"
                                       Width="100"
                                       Height="80" />

                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Orientation="Vertical"
                                        Margin="10,0,0,0">
                                <TextBlock Text="{Binding Champion.UniqueId}"
                                           Style="{ThemeResource HeaderTextBlockStyle}"
                                           LineHeight="50"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontSize="37" />
                                <TextBlock Style="{ThemeResource HeaderTextBlockStyle}"
                                           FontSize="25"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Text="{Binding Role}" />
                            </StackPanel>

                            <Grid Grid.Row="1">
                                <TextBlock FontSize="20"
                                           HorizontalAlignment="Right"
                                           Foreground="{StaticResource PhoneAccentBrush}"
                                           Text="Counters"></TextBlock>
                            </Grid>
                            <Grid Grid.Row="1"
                                  Grid.Column="1">
                                <TextBlock FontSize="20"
                                           Foreground="{StaticResource PhoneAccentBrush}"
                                           HorizontalAlignment="Center"
                                           Text="Difficulty"></TextBlock>
                            </Grid>

                        </Grid>
                        
                        <Grid Grid.Row="2">
                            <ListView ItemsSource="{Binding ChampionFeedback.Counters}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="1.1*"></ColumnDefinition>
                                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Margin="0,0,10,5">
                                                <Image x:ConnectionId='16' Source="Assets/upvoteblank.png"
                                                       Name="UpvoteImage"
                                                                                    
                                                                                                    
                                                       Height="25"
                                                       Width="25">
                                                </Image>
                                                <TextBlock Text="{Binding Score}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           FontSize="20">
                                                </TextBlock>
                                                <Image x:ConnectionId='17' Source="Assets/downvoteblank.png"
                                                       Name="DownvoteImage"
                                                                                      
                                                                                                      
                                                       Height="25"
                                                       Width="25">
                                                </Image>
                                            </StackPanel>

                                            <Image x:ConnectionId='15' Grid.Column="1"
                                                                        
                                                   Source="{Binding Name, Converter={StaticResource NameToImageConverter}}">
                                            </Image>

                                            <ProgressBar Grid.Column="2"
                                                         Height="12"
                                                         Margin="15,0,25,0"
                                                         Value="{Binding Value}">
                                            </ProgressBar>

                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>


            <HubSection x:Name="SubmitFeedbackSection">
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="3.5*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>
                        <!--<WindowsPhone81:AdMediatorControl x:Name="AdMediator_23F5B5"
                                                          Style="{StaticResource AdTemplate}"
                                                          VerticalAlignment="Top"
                                                          Id="AdMediator-Id-15146F06-49A2-48DA-8E88-1B55AD05A245" />
                        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_E4450A"
                                                          Grid.Row="4"
                                                          Id="AdMediator-Id-6801C733-9423-4584-922F-2CDB9B1E5C77"
                                                          VerticalAlignment="Bottom"
                                                          Style="{StaticResource AdTemplate}" />-->

                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231531" />
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      Grid.Row="6"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231532" />



                        <TextBlock x:Name="Feedback"
                                   FontSize="35"
                                   Grid.Row="1"
                                   Text="Submit Comments?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>


                        <RadioButton x:ConnectionId='10' GroupName="RadioGroup"
                                     Grid.Row="2"
                                     HorizontalAlignment="Left"
                                     Margin="40,0,0,0"
                                                              
                                     Content="Counter"></RadioButton>
                        <RadioButton x:ConnectionId='11' GroupName="RadioGroup"
                                     Grid.Row="2"
                                     HorizontalAlignment="Right"
                                                              
                                     Content="Playing as"></RadioButton>

                        <TextBox x:ConnectionId='12' Margin="30,0,30,0"
                                 Grid.Row="3"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Text="Your name"
                                 TextAlignment="Center"
                                                      
                                                         ></TextBox>

                        <TextBox x:ConnectionId='13' Name="FeedbackBox"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Margin="0,10,0,0"
                                 Grid.Row="4"
                                 TextWrapping="Wrap"
                                                             ></TextBox>
                        <Button x:ConnectionId='14' Grid.Row="5"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                                      >Send</Button>

                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="CounterCommentSection">
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231533" />
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      Grid.Row="3"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231534" />
                        
                        <StackPanel Grid.Row="1">
                            <TextBlock FontSize="30"
                                       Text="Comments for"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                            </TextBlock>
                            <TextBlock FontSize="30"
                                       Text="{Binding Champion.UniqueId, Converter={StaticResource CounterConverter}}"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                            </TextBlock>
                        </StackPanel>


                        <TextBlock x:ConnectionId='7' Grid.Row="2"
                                   Visibility="Collapsed"
                                   Name="NoCommentMessage"
                                   FontSize="30"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                                                 
                                   TextWrapping="Wrap"> Be the first to submit a comment!</TextBlock>

                        <ScrollViewer Grid.Row="2">
                            <ListView ItemsSource="{Binding ChampionFeedback.Comments, Converter={StaticResource CounterVisbilityConverter}}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            
                                                <StackPanel Margin="0,0,10,0">
                                                    <Image x:ConnectionId='8' Name="UpvoteImage"
                                                           Source="Assets/upvoteblank.png"
                                                           Height="30"
                                                           Width="30"
                                                                                 
                                                                                 >
                                                    </Image>
                                                    <TextBlock Text="{Binding Score}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               FontSize="20">
                                                    </TextBlock>
                                                    <Image x:ConnectionId='9' Name="DownvoteImage"
                                                           Source="Assets/downvoteblank.png"
                                                           Height="30"
                                                           Width="30"
                                                                                   
                                                                                   >
                                                    </Image>
                                                </StackPanel>

                                            <Grid Margin="0,0,0,10" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <TextBlock FontSize="30"
                                                           Text="{Binding User}">
                                                </TextBlock>
                                                <TextBlock FontSize="20"
                                                           Grid.Row="1"
                                                           TextWrapping="Wrap"
                                                           Text="{Binding Text}">
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="PlayingCommentSection">
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>

                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231535" />
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      Grid.Row="3"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="231536" />

                        <StackPanel Grid.Row="1">
                            <TextBlock FontSize="30"
                                       Text="Comments for"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                            </TextBlock>
                            <TextBlock FontSize="30"
                                       Text="{Binding Champion.UniqueId, Converter={StaticResource PlayingConverter}}"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center">
                            </TextBlock>
                        </StackPanel>

                        <TextBlock x:ConnectionId='4' Grid.Row="2"
                                   Visibility="Collapsed"
                                   Name="NoCommentMessage2"
                                   FontSize="30"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                                                  
                                   TextWrapping="Wrap"> Be the first to submit a comment!</TextBlock>

                        <ScrollViewer Grid.Row="2">
                            <ListView ItemsSource="{Binding ChampionFeedback.Comments, Converter={StaticResource PlayingVisbilityConverter}}"
                                      IsItemClickEnabled="True">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Margin="0,0,10,0">
                                                <Image x:ConnectionId='5' Name="UpvoteImage"
                                                       Source="Assets/upvoteblank.png"
                                                       Height="30"
                                                       Width="30"
                                                                             
                                                                             >
                                                </Image>
                                                <TextBlock Text="{Binding Score}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           FontSize="20">
                                                </TextBlock>
                                                <Image x:ConnectionId='6' Name="DownvoteImage"
                                                       Source="Assets/downvoteblank.png"
                                                       Height="30"
                                                       Width="30"
                                                                               
                                                                               >
                                                </Image>
                                            </StackPanel>

                                            <Grid Margin="0,0,0,10"
                                                  Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <TextBlock FontSize="30"
                                                           Text="{Binding User}">
                                                </TextBlock>
                                                <TextBlock FontSize="20"
                                                           Grid.Row="1"
                                                           TextWrapping="Wrap"
                                                           Text="{Binding Text}">
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="SubmitCounterSection">
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="80"></RowDefinition>
                        </Grid.RowDefinitions>

                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="232527" />
                        <UI:AdControl HorizontalAlignment="Center"
                                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                                      VerticalAlignment="Top"
                                      Width="480"
                                      Height="80"
                                      Grid.Row="5"
                                      AutoRefreshIntervalInSeconds="60"
                                      AdUnitId="232528" />

                        <TextBlock x:Name="Feedback"
                                   FontSize="35"
                                   Grid.Row="1"
                                   Text="Submit Counters?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                        </TextBlock>

                        <TextBox x:ConnectionId='1' Height="40"
                                 Name="FilterBox"
                                                          
                                 Grid.Row="2"
                                 Margin="0,20,0,0"
                                                           
                                 Text="Type to search"
                                                                 >
                        </TextBox >

                        <GridView x:ConnectionId='2' ItemsSource="{Binding Filter}"
                                  IsItemClickEnabled="True"
                                  Grid.Row="3"
                                  Margin="0,15,0,10"
                                                           >
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Image Source="{Binding ImagePath}"
                                               Width="50"
                                               Height="50" />
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>

                        <Button x:ConnectionId='3' Grid.Row="4"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                                       
                                Content="Submit">
                        </Button>
                    </Grid>
                    
                    
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>

