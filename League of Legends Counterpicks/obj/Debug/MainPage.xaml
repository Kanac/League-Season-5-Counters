<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      x:Class="League_of_Legends_Counterpicks.MainPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="People"
                          Label="Share"
                                                />
            <AppBarButton x:ConnectionId='2' HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Icon="Like"
                          Label="Tweet"
                                       />
            <AppBarButton x:ConnectionId='3' Icon="Document"
                          Label="Change Log"
                                                    />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource HubBackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*" />
            <RowDefinition Height="7.5*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <WindowsPhone81:AdMediatorControl x:Name="AdMediator_086568"
                                                  HorizontalAlignment="Center"
                                                  Height="Auto"
                                                  Id="AdMediator-Id-63C8B99E-54E8-4635-A1BE-3EAD1B8DD80D"
                                                  VerticalAlignment="Top"
                                                  Width="Auto" />
            </Grid>
        </Grid>
        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
                <!--<AutoSuggestBox x:Name="FilterBox"
                                GotFocus="FilterBox_GotFocus"
                                TextChanged="FilterBox_TextChanged"
                                SuggestionChosen="FilterBox_SuggestionChosen"
                                KeyDown="KeyDown_Event"
                                Margin="15,0,15,0" />-->
                <!--<Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Margin="15,0,15,0"
                        Tapped="Button_Tapped"
                        Background="{ThemeResource TextBoxBackgroundThemeBrush}"
                        Foreground="{ThemeResource TextBoxForegroundThemeBrush}"
                    FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                        >
                        Tap to Search
                </Button>-->
            <TextBox x:ConnectionId='4' Margin="15,0,15,0"
                     IsReadOnly="True"
                                                
                     TextAlignment="Center"
                     Text="Tap to Search"></TextBox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListView x:ConnectionId='5' ItemsSource="{Binding Roles}"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                                                            >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="15,0,0,20">
                                <TextBlock Text="{Binding UniqueId}"
                                           Style="{ThemeResource ListViewItemTextBlockStyle}"
                                           FontSize="28"
                                           FontFamily="Segoe WP Black" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="19"
                                   VerticalAlignment="Center"
                                   Foreground="#FFF3FD29"> Tahm Kench update is here and more!</TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right">

            <TextBlock Text="By a Diamond 1"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Raklor"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <Grid Grid.Row="2" />
        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_B1A469"
                                          HorizontalAlignment="Center"
                                          Height="Auto"
                                          Id="AdMediator-Id-4AEFF57A-048D-4D77-9D67-312A59EA38BC"
                                          Grid.Row="2"
                                          VerticalAlignment="Bottom"
                                          Width="Auto" />

    </Grid>
</Page>
    
   

