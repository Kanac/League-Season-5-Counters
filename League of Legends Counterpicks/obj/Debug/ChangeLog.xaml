<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      x:Class="League_of_Legends_Counterpicks.ChangeLog"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBlock"
               x:Key="Notes">
            <Setter Property="FontSize"
                    Value="17" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </Page.Resources>
    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            
        </Grid.RowDefinitions>
        
        <UI:AdControl ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231539" />
        <UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      Grid.Row="4"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231540" />

        <!--<WindowsPhone81:AdMediatorControl x:Name="AdMediator_CAC3BD"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          Width="480"
                                          Height="80"
                                          Id="AdMediator-Id-3396B67C-6AC8-4255-85BD-4167E99FD95F" />
        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_AC3F32"
                                          Id="AdMediator-Id-08232986-F40C-4B04-942D-7C93B7C16F0C"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Bottom"
                                          Width="480"
                                          Grid.Row="4"
                                          Height="80" />-->

        <!-- Title Panel -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="League Season 5 Counters Changes"
                       Foreground="#FFF3FD29"
                       TextAlignment="Justify"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       Margin="0,12,0,0" />

            
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="2"
              x:Name="ContentRoot"
              Margin="19,9.5,19,0">
            <ScrollViewer>
                <StackPanel Orientation="Vertical">
                    <TextBlock FontSize="25">
						<Run Text="July 26 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Optimized net code for faster online interation"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Ensures each comment page is on 2 rows now"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Updated all counters to patch 5.14"></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 25 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-When navigating towards champion page, role page is saved when back button is pressed"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Redesigned counter hub section in Champion Page"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Fixed text wrapping and alignment of comment section"></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 22 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Added a shit ton of changes"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Implemented an azure backend for lots of goodies"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Each Champion Page has two existing comments sections"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Dyanmic voting and commenting system to go with it"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Too many changes to talk about"></Run>
                        <LineBreak></LineBreak>
                            
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 14 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Added Tahm Kench and updated all counters respectively!"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Optimized filter bar again "></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 9 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Changed filter bar functionality"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Updated Ads "></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 8 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Changed Role Page organization"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Updated counters again"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Optimized alignment across all pages"></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 5 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Added in toast notifications on app launch and on a background timer basis"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Auto suggest box now doesn't show all champions when empty"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Updated several champion counters according to user feedback"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Added tweet button to command bar"></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="July 2 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Added in a command bar for sharing and changelog"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Adjusted auto suggest box to not show all with no text"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Filter page and auto suggest matches are now symmetrical"></Run>
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="June 30 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Fixed alpha jump list problem with semantic zoom"></Run>
                        <LineBreak></LineBreak>
                        <Run Text="-Optimized ad size for all devices"></Run>
                         <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="June 29 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
                        <Run Text="-Added in an auto suggest box for awesome navigation"></Run>
                         <LineBreak></LineBreak>
                        <Run Text="-Changed ad placement and optimized scaling appropriately" />
                        <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="June 26 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
						<Run Text="-Fixed jump list image render bug on first load" />
                         <LineBreak></LineBreak>
						<Run Text="-Created hub section of all roles in the role page" />
                         <LineBreak></LineBreak>
						<Run Text="-Added margins and other scaling balances" />
                         <LineBreak></LineBreak>
						<Run Text="-Added a check updates button on this page" />
                         <LineBreak></LineBreak>
						<Run Text="-Updated several champions counters according to feedback thus far" />
                         <LineBreak></LineBreak>
                    </TextBlock>
                    <TextBlock FontSize="25">
						<Run Text="June 24 2015" />
                    </TextBlock>
                    <TextBlock Style="{StaticResource Notes}">
						<Run Text="-Added Ekko and updated all counters respectively" />
                        <LineBreak></LineBreak>
						<Run Text="-Change Log button in main page" />
                         <LineBreak></LineBreak>
