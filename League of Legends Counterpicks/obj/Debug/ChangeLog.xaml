						 <LineBreak></LineBreak>
                        <Run Text="-Updated champion names to be more accurate" />
                         <LineBreak></LineBreak>
						<Run Text="-Optimized scaling across all pages" />
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        
        <Button x:ConnectionId='1' Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"                       >
            Check for Updates
        </Button>
      
    </Grid>
</Page>

