<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:valueconverter="using:League_of_Legends_Counterpicks.Converters" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      x:Class="League_of_Legends_Counterpicks.FilterPage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel.Role, RelativeSource={RelativeSource Mode=Self}}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <valueconverter:FilterFormat  x:Key="filterFormat" />
    </Page.Resources>

    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_981813"
                                          HorizontalAlignment="Center"
                                          Height="Auto"
                                          Id="AdMediator-Id-1420257B-A4C6-49F0-893E-70B2F5B12FD4"
                                          VerticalAlignment="Top"
                                          Width="Auto" />
        
        <TextBlock Text="{Binding UniqueId, Converter={StaticResource filterFormat}}"
                   Margin="15,0,0,0"
                   Grid.Row="1"
                   Style="{ThemeResource HeaderTextBlockStyle}"
                   FontSize="60"
                   CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />

        <GridView x:ConnectionId='1' ItemsSource="{Binding Champions}"
                  IsItemClickEnabled="True"
                                                
                  SelectionMode="None"
                  IsSwipeEnabled="false"
                  Grid.Row="2">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding ImagePath}"
                               Width="75"
                               Height="75" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <WindowsPhone81:AdMediatorControl x:Name="AdMediator_97B829"
                                          HorizontalAlignment="Center"
                                          Height="Auto"
                                          Id="AdMediator-Id-53A6C6AE-58DE-4611-A173-A9C4ED3CA34B"
                                          Grid.Row="3"
                                          VerticalAlignment="Bottom"
                                          Width="Auto" />
    </Grid>
</Page>

