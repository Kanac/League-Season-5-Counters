<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      xmlns:q="using:QKit"
      x:Name="pageRoot"
      x:Class="League_of_Legends_Counterpicks.RolePage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Roles[0], Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}">

    <Page.Resources>
        <ValueConverter:RoleConverter x:Key="RoleConverter"/>
        <ValueConverter:NameToImage x:Key="NameToImage"/>
        <Style TargetType="HubSection" x:Key="Header">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="50"
                                   FontFamily ="{ThemeResource PhoneFontFamilySemiLight}"
                                   Margin="0,10,0,0" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="HubData">
            <Grid>
                <GridView x:ConnectionId='1' ItemsSource="{Binding}"
                          IsItemClickEnabled="True"
                                                        
                          SelectionMode="Single"
                          IsSwipeEnabled="false">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image x:ConnectionId='2' Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                       Width="60"
                                       Height="60" 
                                                                 />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Filter"
                          Label="Role">
                <Button.Flyout>
                    <ListPickerFlyout x:ConnectionId='3' x:Name="RoleFlyout"
                                      Placement="Full" 
                                      ItemsSource="{Binding Roles}"
                                      SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                                                               >
                        <ListPickerFlyout.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="{StaticResource TextStyleExtraLargeFontSize}"/>
                            </DataTemplate>
                        </ListPickerFlyout.ItemTemplate>
                    </ListPickerFlyout>
                </Button.Flyout>
            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>


    <Grid x:ConnectionId='4'                       >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,79,0,0" x:Name="AdGrid">
            <WindowsPhone81:AdMediatorControl x:ConnectionId='11' x:Name="AdMediatorR2" Id="AdMediatorIdR2" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='12' x:Name="AdMediatorR3" Id="AdMediatorIdR3" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='13' x:Name="AdMediatorR4" Id="AdMediatorIdR4" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='14' x:Name="AdMediatorR5" Id="AdMediatorIdR5" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='15' x:Name="AdMediatorR6" Id="AdMediatorIdR6" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='16' x:Name="AdMediatorR7" Id="AdMediatorIdR7" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='17' x:Name="AdMediatorR8" Id="AdMediatorIdR8" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='18' x:Name="AdMediatorR9" Id="AdMediatorIdR9" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='19' x:Name="AdMediatorR10" Id="AdMediatorIdR10" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='20' x:Name="AdMediatorR11" Id="AdMediatorIdR11" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='21' x:Name="AdMediatorR12" Id="AdMediatorIdR12" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='22' x:Name="AdMediatorR13" Id="AdMediatorIdR13" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='23' x:Name="AdMediatorR14" Id="AdMediatorIdR14" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='24' x:Name="AdMediatorR15" Id="AdMediatorIdR15" Style="{StaticResource HorizontalAdMediator}"                                                     />
            <WindowsPhone81:AdMediatorControl x:ConnectionId='25' x:Name="AdMediatorR16" Id="AdMediatorIdR16" Style="{StaticResource HorizontalAdMediator}"                                                     />
        </Grid>
        <Grid Grid.Row="1" Margin="0,20,0,0" Name="AdGrid2">
            <WindowsPhone81:AdMediatorControl x:ConnectionId='10' x:Name="AdMediatorR1" Id="AdMediatorIdR1" Style="{StaticResource HorizontalAdMediator}"                                                     />
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox x:ConnectionId='5' Name="FilterBox"
                     Height="40"
                     Margin="15,20,15,0"
                                                  
                                                    
                     Text="Type to search"
                                                        >
            </TextBox>

            <TextBlock x:Name="RoleName"
                       Text="{Binding SelectedRole}"
                       Grid.Row="1"
                       FontSize="50"
                       Margin="15,0,0,0"
                       FontFamily ="{ThemeResource PhoneFontFamilySemiLight}">
            </TextBlock>

            <Grid x:ConnectionId='6' Name="FilterGridView"
                  Margin="15,15,0,0"
                  Grid.Row="2" 
                                                
                  DataContext="{Binding Filter}" Visibility="Collapsed">
                <ContentControl ContentTemplate="{StaticResource HubData}"/>
            </Grid>

            <Grid Grid.Row="2">
                <q:AlphaJumpList x:ConnectionId='7' Name="JumpList"
                             Margin="15,15,0,0"
                             Grid.Row="2"
                                                     >
                    <GridView x:ConnectionId='8' Name="JumpListGridView"
                          ItemsSource="{Binding GroupedChampions}"
                          IsItemClickEnabled="True"
                                                        
                          SelectionMode="Single"
                          IsSwipeEnabled="false">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Image x:ConnectionId='9' Source="{Binding Value.Key, Converter={StaticResource NameToImage}}"
                                                   Width="50"
                                                   Height="50"
                                                                             />
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </q:AlphaJumpList>
            </Grid>
        </Grid>
    </Grid>
</Page>

