<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:UI="using:Microsoft.Advertising.Mobile.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      x:Class="League_of_Legends_Counterpicks.MainPage"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      d:DataContext="{Binding Source={d:DesignData Source=/DataModel/Data.json, Type=data:DataSource}}"
      mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Comment"
                          Label="Send Feedback"
                                                />
            <AppBarButton x:ConnectionId='2' Icon="People"
                          Label="Share"
                                                />
            <AppBarButton x:ConnectionId='3' Icon="Like"
                          Label="Tweet"
                                       />
            <AppBarButton x:ConnectionId='4' Icon="Document"
                          Label="Change Log"
                                                    />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource HubBackgroundImageBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*" />
            <RowDefinition Height="7.5*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <UI:AdControl HorizontalAlignment="Center"
                              ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                              VerticalAlignment="Top"
                              Width="480"
                              Height="80"
                              AutoRefreshIntervalInSeconds="60"
                              AdUnitId="231537" />
                <!--<WindowsPhone81:AdMediatorControl x:Name="AdMediator_B3E200"
                                                  HorizontalAlignment="Center"
                                                  Height="80"
                                                  Id="AdMediator-Id-A9B26502-92B4-4543-8114-35155ED1598C"
                                                  VerticalAlignment="Top"
                                                  Width="480" />-->
            </Grid>
        </Grid>
        <!--Enter inside the dictionary's only key, groups, and then into the list holding them -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
               
            <TextBox x:ConnectionId='5' Margin="15,0,15,0"
                     IsReadOnly="True"
                                                
                     TextAlignment="Center"
                     Text="Tap to Search"></TextBox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListView x:ConnectionId='6' ItemsSource="{Binding Roles}"
                          Grid.Row="1"
                          IsItemClickEnabled="True"
                                                            >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="15,0,0,20">
                                <TextBlock Text="{Binding UniqueId}"
                                           Style="{ThemeResource ListViewItemTextBlockStyle}"
                                           FontSize="28"
                                           FontFamily="Segoe WP Black" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="19"
                                   VerticalAlignment="Center"
                                   Foreground="#FFF3FD29"> Check out the new Comment System!</TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right">

            <TextBlock Text="By a Diamond 1"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
            <TextBlock Text="Raklor"
                       FontSize="15"
                       Foreground="#FFCCDDF7" />
        </StackPanel>
        <Grid Grid.Row="2" />
        <UI:AdControl HorizontalAlignment="Center"
                      ApplicationId="bb8be079-3202-4948-8b29-cfd54367d723"
                      VerticalAlignment="Top"
                      Width="480"
                      Height="80"
                      Grid.Row="2"
                      AutoRefreshIntervalInSeconds="60"
                      AdUnitId="231538" />
        <!--<WindowsPhone81:AdMediatorControl x:Name="AdMediator_C08057"
                                          HorizontalAlignment="Center"
                                          Height="80"
                                          Id="AdMediator-Id-F6AC7015-9AAC-4E1C-9423-9B17C5577C7D"
                                          Grid.Row="2"
                                          VerticalAlignment="Bottom"
                                          Width="480" />-->

    </Grid>
</Page>
    
   

