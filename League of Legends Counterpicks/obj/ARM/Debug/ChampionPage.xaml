<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:League_of_Legends_Counterpicks"
      xmlns:data="using:League_of_Legends_Counterpicks.Data"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
      xmlns:WindowsPhone81="using:Microsoft.AdMediator.WindowsPhone81"
      xmlns:ValueConverter="using:League_of_Legends_Counterpicks.Converters"
      x:Name="pageRoot"
      x:Class="League_of_Legends_Counterpicks.ChampionPage"
      mc:Ignorable="d"
      DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ValueConverter:NameToImage x:Key="NameToImageConverter" />
        <ValueConverter:CommentVisiblity x:Key="CommentVisibility" />
        <ValueConverter:ChampionVisibility x:Key="ChampionVisibility" />
        <ValueConverter:EmptyMessageVisibility x:Key="EmptyMessageVisibility" />
        <DataTemplate x:Key="CommentSection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,10,0">
                    <Image x:ConnectionId='3' Name="UpvoteImage"
                           Source="Assets/upvoteblank.png"
                           Height="30"
                           Width="30"
                                                                 
                                                 >
                    </Image>
                    <TextBlock Text="{Binding Score}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="20">
                    </TextBlock>
                    <Image x:ConnectionId='4' Name="DownvoteImage"
                           Source="Assets/downvoteblank.png"
                           Height="30"
                           Width="30"
                                                                   
                                                   >
                    </Image>
                </StackPanel>

                <Grid Margin="0,0,0,10"
                      Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="25"
                               Text="{Binding User}">
                    </TextBlock>
                    <TextBlock FontSize="18"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Text="{Binding Text}">
                    </TextBlock>
                </Grid>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ChampionScore">
            <StackPanel Margin="0,0,10,5">
                <Image x:ConnectionId='1' Source="Assets/upvoteblank.png"
                       Name="UpvoteImage"
                                                    
                                                                    
                       Height="25"
                       Width="25">
                </Image>
                <TextBlock Text="{Binding Score}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="20">
                </TextBlock>
                <Image x:ConnectionId='2' Source="Assets/downvoteblank.png"
                       Name="DownvoteImage"
                                                      
                                                                      
                       Height="25"
                       Width="25">
                </Image>
            </StackPanel>
        </DataTemplate>
        
        
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Comment" Label="Comment">
                <Button.Flyout>
                    <Flyout Placement="Full" x:Name="CommentFlyout">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="Feedback"
                                   FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Submit Comments?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                            </TextBlock>

                            <Grid Grid.Row="1">
                                <RadioButton GroupName="Comment"
                                         Name="CounterRadio"
                                         HorizontalAlignment="Left"
                                         Margin="40,-5,0,0"
                                         Content="Counter"></RadioButton>
                                <RadioButton GroupName="Comment"
                                         Name="PlayingRadio"
                                         Margin="0,-5,0,0"
                                         HorizontalAlignment="Right"
                                         Content="Playing as"></RadioButton>
                            </Grid>

                            <TextBox x:ConnectionId='9' Margin="30,-10,30,0"
                                 Name="NameBox"
                                 Grid.Row="2"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Text="Your Name"
                                                      
                                 TextAlignment="Center">
                            </TextBox>

                            <TextBox Name="FeedbackBox"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Margin="10,20,10,30"
                                 Grid.Row="3"
                                 TextWrapping="Wrap"></TextBox>

                            <Button x:ConnectionId='10' Grid.Row="4"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                                      >Send</Button>
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Add" Label="Add Data">
                <Button.Flyout>
                    <Flyout Placement="Full" x:Name="ChampionFlyout">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <TextBlock 
                                   FontSize="30"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Submit Champion?"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                            </TextBlock>

                            <Grid Grid.Row="1">
                                <RadioButton GroupName="Champion"
                                         Name="ChampionCounterRadio"
                                         MinWidth="50"
                                         HorizontalAlignment="Left"
                                         Content="Counter"></RadioButton>
                                <RadioButton GroupName="Champion"
                                         Name="ChampionEasyRadio"
                                         MinWidth="50"
                                         HorizontalAlignment="Center"
                                         Content="Easy"></RadioButton>
                                <RadioButton GroupName="Champion"
                                         Name="ChampionSynergyRadio"
                                         MinWidth="50"
                                         HorizontalAlignment="Right"
                                         Content="Synergy"></RadioButton>
                            </Grid>

                            <TextBox x:ConnectionId='6' Height="40"
                                 Name="FilterBox"
                                 Margin="30,0,30,0"
                                 Grid.Row="2"
                                                           
                                 Text="Type to search"
                                                                 >
                            </TextBox >

                            <GridView x:ConnectionId='7' ItemsSource="{Binding Filter}"
                                  HorizontalAlignment="Center"
                                  IsItemClickEnabled="True"
                                  Grid.Row="3"
                                  MaxHeight="300"
                                  Margin="0,15,0,10"
                                                          >
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding Key, Converter={StaticResource NameToImageConverter}}"
                                           Width="50"
                                           Height="50" />
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>

                            <Button x:ConnectionId='8' Grid.Row="4"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                                       
                                Content="Submit">
                            </Button>
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </AppBarButton>
            <AppBarButton x:ConnectionId='5' Icon="SolidStar" Label="Live Stats"                          />
        </CommandBar>
    </Page.BottomAppBar>



    <Grid x:ConnectionId='11' x:Name="LayoutRoot"
                                >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        
        <StackPanel Visibility="{Binding LoadingVisibility}">
            <ProgressBar IsIndeterminate="True"></ProgressBar>
            <TextBlock FontSize="15">Fetching Data...</TextBlock>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Source="{Binding Champion.Key, Converter={StaticResource NameToImageConverter}}"
                   Width="60"
                   Height="60" />
            
            <TextBlock Text="{Binding Champion.Name}"
                       Style="{ThemeResource HeaderTextBlockStyle}"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="25" />
            <TextBlock Style="{ThemeResource HeaderTextBlockStyle}"
                       Margin="0,0,10,0"
                       FontWeight="Bold"
                       FontSize="25"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
